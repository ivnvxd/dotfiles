{
    // Editor & UI
    "editor.wordWrap": "on",
    "editor.minimap.enabled": true,
    "editor.fontSize": 13,
    "editor.fontFamily": "Monaspace Argon, Monolisa, Fira Code, JetBrains Mono, Operator Mono, Menlo, Monaco, 'Courier New', monospace",
    "editor.fontLigatures": "'calt', 'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'ss07', 'ss08', 'ss09', 'liga'",
    "editor.guides.indentation": false,
    "editor.guides.bracketPairs": "active",
    "editor.inlineSuggest.enabled": true,
    "editor.cursorSurroundingLines": 5,
    "editor.stickyScroll.enabled": true,
    "editor.linkedEditing": true,
    "editor.lineNumbers": "relative",
    "workbench.colorTheme": "Catppuccin Mocha",
    "workbench.iconTheme": "catppuccin-mocha",
    "workbench.tree.enableStickyScroll": true,
    "workbench.activityBar.orientation": "vertical",
    "indentRainbow.indicatorStyle": "light",
    "indentRainbow.lightIndicatorStyleLineWidth": 1,
    "explorer.confirmDelete": false,

    // Git
    "git.autofetch": true,
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "projectManager.git.baseFolders": ["~/dev/src/"],

    // Terminal
    "terminal.integrated.fontFamily": "Hack Nerd Font Mono",
    "terminal.integrated.fontSize": 13,

    // Formatting
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "modificationsIfAvailable",
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.organizeImports": "explicit"
    },
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,

    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff"
    },
    "[go]": {
        "editor.defaultFormatter": "golang.go"
    },
    "[markdown]": {
        "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[xml]": {
        "editor.defaultFormatter": "redhat.vscode-xml"
    },
    "[rust]": {
        "editor.defaultFormatter": "rust-lang.rust-analyzer"
    },
    "notebook.formatOnSave.enabled": true,
    "notebook.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.organizeImports": "explicit"
    },

    // Vim
    "vim.startInInsertMode": false,
    "vim.easymotion": true,
    "vim.sneak": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,

    // Vim Status Bar
    "vim.statusBarColorControl": true,
    "vim.statusBarColors.commandlineinprogress": ["#89b4fa", "#1e1e2e"],
    "vim.statusBarColors.easymotioninputmode": ["#89b4fa", "#1e1e2e"],
    "vim.statusBarColors.easymotionmode": ["#89b4fa", "#1e1e2e"],
    "vim.statusBarColors.insert": ["#f38ba8", "#1e1e2e"],
    "vim.statusBarColors.normal": ["#101019", "#cdd6f4"],
    "vim.statusBarColors.replace": ["#fab387", "#1e1e2e"],
    "vim.statusBarColors.searchinprogressmode": ["#89b4fa", "#1e1e2e"],
    "vim.statusBarColors.surroundinputmode": ["#89b4fa", "#1e1e2e"],
    "vim.statusBarColors.visual": ["#cba6f7", "#1e1e2e"],
    "vim.statusBarColors.visualblock": ["#f9e2af", "#1e1e2e"],
    "vim.statusBarColors.visualline": ["#74c7ec", "#1e1e2e"],

    // Vim keybindings
    "vim.leader": "<space>",
    "vim.insertModeKeyBindings": [
        {
            "before": ["k", "j"],
            "after": ["<Esc>"]
        },
        {
            "before": ["j", "k"],
            "after": ["<Esc>"]
        },
        // Outdent line
        {
            "before": ["<S-tab>"],
            "commands": ["editor.action.outdentLines"]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<leader>", "d"],
            "after": ["_", "d", "d"]
        },
        {
            "before": ["<Esc>"],
            "commands": [":noh"]
        },
        // Easymotion bindings
        {
            "before": ["<leader>", "f"],
            "after": ["<leader>", "<leader>", "s"]
        },
        {
            "before": ["<leader>", "s"],
            "after": ["<leader>", "<leader>", "<leader>", "b", "d", "j", "k"]
        },
        {
            "before": ["<leader>", "t"],
            "after": ["<leader>", "<leader>", "<leader>", "b", "d", "t"]
        },
        // Indent lines
        {
            "before": ["<tab>"],
            "commands": ["editor.action.indentLines"]
        },
        {
            "before": ["<S-tab>"],
            "commands": ["editor.action.outdentLines"]
        }
    ],
    "vim.visualModeKeyBindings": [
        // Easymotion bindings
        {
            "before": ["<leader>", "f"],
            "after": ["<leader>", "<leader>", "s"]
        },
        {
            "before": ["<leader>", "s"],
            "after": ["<leader>", "<leader>", "<leader>", "b", "d", "j", "k"]
        },
        {
            "before": ["<leader>", "t"],
            "after": ["<leader>", "<leader>", "<leader>", "b", "d", "t"]
        },
        // Indent lines
        {
            "before": ["<tab>"],
            "commands": ["editor.action.indentLines"]
        },
        {
            "before": ["<S-tab>"],
            "commands": ["editor.action.outdentLines"]
        }
    ],
    "vim.handleKeys": {
        // "<C-a>": false, // Move to beginning of line
        // "<C-e>": false, // Move to end of line
        // "<C-f>": false, // Move forward one character
        // "<C-w>": false, // To use Ctrl+hjkl for window navigation
        // "<C-b>": false, // Move backward one character
        // "<C-p>": false, // Move up one line
        // "<C-n>": false, // Move down one line
    },

    // Extensions
    "prettier.tabWidth": 4,
    "go.toolsManagement.autoUpdate": true,
    "vs-kubernetes": {
        "vscode-kubernetes.helm-path-mac": "/Users/ve/.vs-kubernetes/tools/helm/darwin-arm64/helm"
    },
    "redhat.telemetry.enabled": false,
    "cursor.cpp.disabledLanguages": ["scminput"],
    "workbench.colorCustomizations": {
        "statusBar.background": "#101019",
        "statusBar.noFolderBackground": "#101019",
        "statusBar.debuigingBackground": "#101019",
        "statusBar.foreground": "#cdd6f4",
        "statusBar.debuggingForeground": "#cdd6f4",
        "statusBar.debuggingBackground": "#101019"
    }
}
